h1 Listing pages

table.table.table-bordered.table-hover.table-stripped
  thead
    tr
      th Name
      th Path
      th Title
      th Html
      th
      th
      th

  tbody
    - @pages.each do |page|
      tr
        td = page.name
        td = page.path
        td = page.title
        td
          span title='#{page.html}'
            = page.html.gsub(/(.{40}).+/, '\1...')
        td = link_to 'Show', page, class: 'btn btn-default'
        td = link_to 'Edit', edit_page_path(page), class: 'btn btn-warning'
        td = link_to 'Destroy', page, data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn btn-danger'

br

= link_to 'New Page', new_page_path, class: 'btn btn-primary'
